<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.MainActivity">

    <Button
        android:id="@+id/buttonRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:background="#F78A0C"
        android:onClick="Registrar"
        android:text="Registrarse"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:typeface="normal" />

    <Button
        android:id="@+id/buttonContactEmergencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/buttonRegistrar"
        android:layout_below="@+id/buttonRegistrar"
        android:layout_marginTop="40dp"
        android:background="#F78A0C"
        android:text="Contactos de emergencia"
        android:textAlignment="center"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_action_name" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_marginTop="300px"
        android:orientation="horizontal"
        android:clickable="true"
        android:onClick="lanzarSitios"
        fontPath="fonts/DarwinBold.ttf"
        tools:ignore="MissingPrefix">

        <ImageView
            android:layout_width="50px"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5px"
            android:src="@drawable/home" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10px"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Sitios favoritos"
                android:layout_marginStart="0px"
                android:textSize="35px"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
