<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.laura.planit">

    <application
        android:name=".Activities.MiAplicacion"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-permission android:name="android.permission.SEND_SMS" />
        <uses-permission android:name="android.permission.READ_CONTACTS" />

        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.RegistroActivity"></activity>
        <activity android:name=".Activities.Sitios.SitiosActivity" />
        <activity android:name=".Activities.Sitios.AgregarSitioActivity" />

        <service
            android:name=".Services.PersitenciaService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>